[Unit]
Description=GO AI Marketing Services Flask App
After=network.target

[Service]
User=www-data
Group=www-data
WorkingDirectory=/path/to/your/goai-site
Environment=PATH=/path/to/your/goai-site/venv/bin
ExecStart=/path/to/your/goai-site/venv/bin/python wsgi.py
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
